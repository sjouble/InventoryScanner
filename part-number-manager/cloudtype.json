{
  "build": {
    "command": "npm install && npm run build",
    "output": "dist",
    "environment": {
      "NODE_VERSION": "18"
    }
  },
  "deploy": {
    "static": true,
    "spa": true,
    "headers": {
      "/*": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "/sw.js": {
        "Cache-Control": "no-cache"
      },
      "/manifest.json": {
        "Cache-Control": "no-cache"
      }
    }
  },
  "environment": {
    "NODE_ENV": "production"
  }
} 